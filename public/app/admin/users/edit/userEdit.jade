h1 {{formTitle}}

form.form-horizontal(name="form")
	.control-group(ng-class="{error: form.login.$error.required}")
		label.control-label Telefonní číslo
		.controls
			input(type='text', name="login", ng-model="user.login", required)

	.control-group(ng-class="{error: form.firstName.$error.required}")
		label.control-label Jméno
		.controls
			input(type='text', name="firstName", ng-model="user.firstName", required)

	.control-group(ng-class="{error: form.firstName.$error.required}")
		label.control-label Příjmení
		.controls
			input(type='text', name="lastName", ng-model="user.lastName", required)

	.control-group(ng-class="{error: form.email.$error.required}")
		label.control-label E-mail
		.controls
			input(type='email', name="email", ng-model="user.email", required)

	.control-group
		label.control-label Administrátor
		.controls
			input(type='checkbox', ng-model="user.isAdmin")

	.control-group(ng-class="{error: !form.password.$valid}")
		label.control-label Heslo
		.controls
			input(type='password', name="password", ng-model="user.password")

	.control-group(ng-class="{error: !form.passwordConfirmaton.$valid}")
		label.control-label Heslo znovu
		.controls
			input(type='password', name="passwordConfirmaton", ng-model="user.passwordConfirmaton", same-as="user.password")

	p
		a.btn(ng-href="/admin/users") Zpět na seznam
		a.btn.btn-primary(ng-click="save()",ng-disabled="form.$invalid") Uložit