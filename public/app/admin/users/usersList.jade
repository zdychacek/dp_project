div.users-content
	h1 Seznam uživatelů

	a.btn(ng-href="/admin/users/0/edit")
		span.icon.icon-plus-sign
		| Nový uživatel

div.wrap
	spinner(show="loadingData", align="center")

	table.table(sortable-table, sort-column="sort.column", sort-dir="sort.dir", ng-style="getTableVisibilityStyle()")
		tr(ng-repeat="user in users")
			td(data-title="Login", sortable="login") {{user.login}}
			td(data-title="Jméno", sortable="firstName") {{user.firstName}}
			td(data-title="Příjmení", sortable="lastName") {{user.lastName}}
			td(data-title="E-mail", sortable="email") {{user.email}}
			td(data-title="Administrátor", sortable="isAdmin") {{user.isAdmin}}
			td.icon
				a.btn.btn-info(ng-click="editUser(user)", href="#")
					span.icon-pencil
			td.icon
				a.btn.btn-danger(ng-click="removeUser(user)", href="#")
					span.icon-remove-sign

	pagination.pagination(
					total-items="totalItems",
					page="currentPage",
					max-size="maxSize",
					on-select-page="selectPage(page)",
					items-per-page="itemsPerPage",
					num-pages="totalPages",
					boundary-links="true",
					max-size="5")

	div.itemsCount Počet záznamů na stránku:
		select(ng-model="itemsPerPage", ng-options="i for i in itemsPerPageList")

	div.total Stránka: {{currentPage}} / {{totalPages}}