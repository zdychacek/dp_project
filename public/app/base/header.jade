div.navbar(ng-controller="HeaderCtrl")
	div.navbar-inner.clearfix
		a.brand.pull-left(ng-click="home()") Letecká společnost s.r.o.          

		ul.nav.pull-left(ng-show="isAuthenticated()")
			li(ng-class="{active:isNavbarActive('flights')}")
				a(href="/flights") Seznam letů

			li(ng-class="{active:isNavbarActive('account')}")
				a(href="/account") Nastavení účtu

			li.dropdown(ng-class="{active:isNavbarActive('admin'), open: isAdminMenuOpen}", ng-show="isAdmin()")
				a#tools-menu.dropdown-toggle(role="button", ng-click="isAdminMenuOpen = !isAdminMenuOpen") Admin
					b.caret
				ul.dropdown-menu(role="menu", aria-labelledby="admin-menu")
					li
						a(tabindex="-1", href="/admin/users", ng-click="isAdminMenuOpen=false") Uživatelé
					li
						a(tabindex="-1", href="/admin/flights", ng-click="isToolsMenuOpen=false") Editace letů

		login-toolbar

		ul.nav.pull-right
			li.spinner-wrap
				spinner(size="small", show="hasPendingRequests()")

	div
		ul.breadcrumb
			li(ng-repeat="breadcrumb in breadcrumbs.getAll()")
				span.divider
				ng-switch(on="$last")
					span(ng-switch-when="true") {{breadcrumb.name}}
					span(ng-switch-default)
						a(href="{{breadcrumb.path}}") {{breadcrumb.name}}